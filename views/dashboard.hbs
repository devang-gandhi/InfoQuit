<h6>Dashboard</h6>
<h3>Warm Welcome {{name}}</h3>
<p>Here is your required information buckets.</p>

{{#if info}}
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each info}}
                <tr>
                    <td><a href="/infos/{{_id}}">{{title}}</a></td>
                    <td>{{formatdate createdAt 'Do MMMM YYYY , h:mm:ss a'}}</td>
                    <td><span class="dash-status">{{status}}</span></td>
                    <td>
                        <a href="/infos/edit/{{_id}}" class="btn btn-float">
                        <i class="fas fa-edit"></i>
                        </a>

                        <form action="/infos/{{_id}}" method="POST" id="delete-form">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn red">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>

                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <p>You don't have any information available to see.</p>
{{/if}}