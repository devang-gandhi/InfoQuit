<h1>Informations</h1>
<div class="row">
    {{#each info}}
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">
                    {{{editIcon user ../user _id}}}
                </div>
                <div class="card-content center-align">
                    <h5>{{title}}</h5>
                    <p>{{stripTags (truncate body 35)}}</p>
                    <br>
                    <div class="chip">
                        <img src="{{user.image}}" alt="">
                        <a href="/infos/user/{{user._id}}">{{user.displayname}}</a>
                    </div>
                </div>
                <div class="card-action center-align">
                    <a href="/infos/{{_id}}" class="btn grey">Expand</a>
                </div>
            </div>
        </div>
    {{else}}
        <p>No information is available to display.</p>
    {{/each}}
</div>