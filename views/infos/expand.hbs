<div class="row">
    <div class="col s12 m8">
        <h3>{{info.title}}
            <small>{{{editIcon info.user user info._id false}}}</small>
        </h3>
        <div class="card story">
            <div class="card-content">
                <span class="card-title">{{formatdate date 'Do MMMM YYYY, h:mm:ss a'}}</span>
                {{{info.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{info.user.displayname}}</span>
                <img src="{{info.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/stories/user/{{info.user._id}}">More From {{info.user.firstname}}</a>
            </div>
        </div>
    </div>
</div>